# Production Backend Environment
NODE_ENV=production
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/rmi_teller_report_prod?retryWrites=true&w=majority

# Security
JWT_SECRET=your-super-secure-random-jwt-secret-key-here-minimum-32-chars
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false