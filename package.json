{
  "name": "rmi-teller-report",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "dev": "start start-dev.bat",
    "prod": "npm run build && npm start",
    "production": "npm run build && npm start",
    "electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win --x64",
    "build:apk": "npm run build && xcopy /E /I frontend\\dist android\\www && cd android && cordova build android --release && cd ..",
    "build:apk-debug": "npm run build && xcopy /E /I frontend\\dist android\\www && cd android && cordova build android --debug && cd .."
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.2.0",
    "electron-updater": "^6.6.2",
    "sharp": "^0.34.5",
    "tslib": "^2.8.1"
  },
  "build": {
    "appId": "com.rmi.teller-report",
    "productName": "RMI Teller Report",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "GIDEONXYBOT",
      "repo": "Rmi-Gideon"
    }
  }
}
